# Node Agent Dockerfile
FROM golang:1.22-alpine AS builder

WORKDIR /app

# 安装依赖
RUN apk add --no-cache git ca-certificates

# 复制依赖文件
COPY go.mod go.sum ./
RUN go mod download

# 复制源码
COPY . .

# 构建
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-w -s" -o /executor ./cmd/executor

# 运行时镜像
FROM alpine:3.19

RUN apk add --no-cache ca-certificates tzdata docker-cli git

# 非 root 用户（需要 docker 组权限）
RUN adduser -D -u 1000 appuser && \
    addgroup appuser docker || true

USER appuser

WORKDIR /app

COPY --from=builder /executor .

ENTRYPOINT ["./executor"]
