# Gemini CLI Runner Dockerfile
FROM node:20-slim

# 安装基础工具
RUN apt-get update && apt-get install -y \
    git \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# 安装 Gemini CLI
RUN npm install -g @anthropic-ai/gemini-cli || echo "Using placeholder for Gemini CLI"

# 创建非 root 用户
RUN useradd -m -u 1000 agent
USER agent

# 工作目录
WORKDIR /workspace

# 默认命令
CMD ["gemini", "--help"]
