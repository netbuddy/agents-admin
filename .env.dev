# Agents Admin - 开发环境基础设施配置
# 用法: docker compose --env-file .env.dev up

# ---- 应用环境 ----
APP_ENV=dev

# ---- MongoDB ----
MONGO_ROOT_USERNAME=agents_admin
MONGO_ROOT_PASSWORD=agents_dev_password
MONGO_DB_NAME=agents_admin
MONGO_PORT=27017

# ---- PostgreSQL (可选，profile=postgres) ----
POSTGRES_USER=agents
POSTGRES_PASSWORD=agents_dev_password
POSTGRES_DB=agents_admin
POSTGRES_PORT=5432

# ---- Redis ----
REDIS_PASSWORD=agents_dev_password
REDIS_PORT=6380

# ---- MinIO ----
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_dev_123
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ---- 认证 ----
JWT_SECRET=dev-secret-key-at-least-32-characters-long
ADMIN_EMAIL=admin@agents-admin.local
ADMIN_PASSWORD=admin123456
NODE_TOKEN=dev-node-token-shared-secret

# ---- API Server (docker compose --profile full) ----
API_SERVER_PORT=8080
LOG_LEVEL=debug
